<resources>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlNormal">@color/textcolor_Grey</item>
        <item name="colorAccent">#6200ea</item>
        <item name="android:textColor">@color/textcolor_DarkGrey</item>
        <item name="android:textColorHint">@color/textcolor_Grey</item>

    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <!--앱바에 적용될 스타일 테마-->
    <style name="AppTheme.Appbar">
    <item name="titleTextColor">#ffffff</item>
    <!--액션바의 메뉴아이템 색상-->
    <item name="colorControlNormal">#ffffff</item>

    <item name="subtitleTextColor">#ffffff</item>
    </style>
</resources>
